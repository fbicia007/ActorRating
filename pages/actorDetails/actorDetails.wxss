.comment-view {
  display: flex;
  padding: 20rpx 20rpx;
  border-bottom: 2rpx solid #eee;
}

.comment-view .comment {
  flex: 1;
  display: flex;
  flex-direction: column;
  width: 100%;
  margin-left: 20rpx;
}

.comment-avatar {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}

.icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 60rpx;
}

.comment-name {
  color: #000;
  font-size: 24rpx;
  line-height: 20rpx;
}

.comment-content {
  margin-top: 20rpx;
  color: #000;
  font-size: 28rpx;
  line-height: 1.5;
}

.comment-date {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #666;
}
