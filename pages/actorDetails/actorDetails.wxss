.container {
  width: 100%;
  height: 100%;
  overflow: hidden;
  background-color: #efefef;
}

.mb4 {
  margin-bottom: 10rpx;
}

.mb5 {
  margin-left: 10rpx;
}

.header {
  width: 100%;
  position: relative;
  overflow: hidden;
}

.header-bg {
  position: absolute;
  left: 0;
  bottom: 0;
  top: 0;
  right: 0;
  width: 100%;
  filter: blur(50px);
  z-index: 0;
  background-size: cover;
  background-image: gray;
  background-repeat: no-repeat;
  background-position-y: 40%;
}

.header-left {
  z-index: 1;
  width: 240rpx;
  height: 340rpx;
  position: relative;
  margin-left: 20rpx;
  margin-top: 20rpx;
  border: 1px solid #d7d8d9;
  float: left;
  text-align: center;
  line-height: 40px;
}

.header-left image {
  width: 100%;
  height: 100%;
}

.header-right {
  position: relative;
  height: 340rpx;
  margin-left: 30rpx;
  float: left;
  display: flex;
  align-items: flex-start;
  flex-direction: column;
  justify-content: center;
}

.header-right-name-label {
  display: inline-block;
  color: lightgray;
  margin-top: 16rpx;
  font-size: 36rpx;
}

.header-right-name {
  display: inline-block;
  color: #fff;
  margin-top: 16rpx;
  font-size: 36rpx;
}

.header-right-other-label {
  display: inline-block;
  color: lightgray;
  font-size: 30rpx;
}

.header-right-other {
  display: inline-block;
  color: #fff;
  font-size: 30rpx;
}

