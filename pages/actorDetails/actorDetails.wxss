.vote-view {
  position: static;
  width: 100%;
  height: 150rpx;
  flex-direction: row;
  justify-content: flex-start;
  display: flex;
}

.vote-view-background {
  width: 70%;
  border-radius: 3px;
  border: 1px solid #8d8e98;
  background: #868891;
  margin: 20rpx 5rpx 20rpx 20rpx;
    display: flex;
  flex-direction: column;
  justify-content: center;
}

.vote-view-inner {
  color: #fff;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  margin: 10rpx;
}

.vote-text {
  position: relative;
  font-size: 20rpx;
}

.vote-progress {
  position: relative;
  margin: 0 10rpx;
  width: 70%;
}

.progress {
  width: 100%;
}

.vote-star-background {
  width: 30%;
  border-radius: 3px;
  border: 1px solid #8d8e98;
  background: #868891;
  margin: 20rpx 20rpx 20rpx 5rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.vote-start-label {
  position: relative;
  color: #fff;
  font-size: 26rpx;
  margin: 0 20rpx;
}

.vote-start-view {
  position: relative;
  margin: 0 20rpx;
}

.vote-start {
  width: 20rpx;
  height: 20rpx;
  src: "../../images/normal.png";
}

.vote-start-text {
  position: relative;
  color: #fff;
  font-size: 20rpx;
  margin: 0 20rpx 0 10rpx;
}

.container-desc {
  width: 100%;
  border-top: 2rpx solid #eaeaea;
  border-bottom: 2rpx solid #d8d8d8;
  background: #fff;
  display: flex;
  align-items: center;
  flex-direction: column;
  margin-bottom: 20rpx;
}

.container-desc .banner-title {
  margin: 0 auto;
  padding: 0 0 0 30rpx;
  width: 100%;
  font-size: 28rpx;
  color: #000;
  float: left;
  line-height: 72rpx;
  font-weight: bold;
}

.container-desc-text {
  display: block;
  width: 90%;
  margin: 0 auto;
  font-size: 32rpx;
  padding: 0 30rpx 0 30rpx;
  overflow: hidden;
  line-height: 1.5;
  -webkit-box-orient: vertical;
  text-overflow: ellipsis;
  display: -webkit-box;
}

.container-desc image {
  width: 50rpx;
  height: 50rpx;
}

.down {
  transform: rotate(180deg);
}

.banner {
  width: 100%;
  background: #fff;
  border-top: 2rpx solid #eaeaea;
  border-bottom: 2rpx solid #d8d8d8;
  margin-bottom: 20rpx;
}

.banner-content {
  width: 100%;
  background: #fff;
}

.banner .banner-title {
  margin-left: 30rpx;
  width: 100%;
  font-size: 28rpx;
  color: #000;
  float: left;
  line-height: 72rpx;
  font-weight: bold;
}

.banner-contain {
  width: 100%;
  white-space: nowrap;
  display: flex;
}

