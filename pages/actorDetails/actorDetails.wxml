  <view class="banner">
    <view class="banner-content">
      <view class="banner-title">
        粉丝评论
        <view class="banner-contain-btn" bindtap='onCommentClicked'>
          <text class="banner-contain-inner">我要评论</text>
        </view>
      </view>
      <view class="comment-view" wx:for="{{item2}}" wx:for-item="item">
        <view class="comment-avatar">
          <image class="icon" src="{{item.avatarurl}}"></image>
        </view>
        <view class="comment">
          <text class="comment-name">{{item.nickName}}</text>
          <view class="comment-content">{{item.comment}}</view>
          <view class="comment-date">{{item.time}}</view>
        </view>
