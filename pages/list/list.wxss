/* pages/list/list.wxss */
.film-container{
  padding-top:10px;
  padding-bottom:10px;
  width:94%;
  margin:0 auto;
  display: flex;
  flex-flow: row wrap;
  align-content: flex-start;

}
.film-item{
  box-sizing: border-box;
  flex: 0 0 30%;
  margin:0 1% 16px 2%; 
}
 .film-image{
  width:100%;
  height:147px;
  display: block;
} 
 .film-title{
  font-size: 0.6rem;
  font-weight: 600;
  line-height: 0.8;
} 
