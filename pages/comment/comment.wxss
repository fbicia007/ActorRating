/* pages/comment/comment.wxss */

.header {
  width: 100%;
  display: flex;
  justify-content: center;
  margin: 50rpx 0;
}

.rating-title-view {
  display: block;
}

.rating-title {
  font-weight: 500;
  font-size: 100rpx;
  color: #f7ba0a;
}

.rating-title-label {
  color: #f7ba0a;
}

.star-view {
  width: 100%;
  height: 140rpx;
}

.star-image {
  position: absolute;
  width: 100rpx;
  height: 100rpx;
  src: "../../images/normal.png";
}

.item {
  position: absolute;
  top: 0rpx;
  width: 50rpx;
  height: 100rpx;
}

.input-view {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.input-area {
  height: 150rpx;
  border: 1rpx solid #e8e8e8;
  padding: 10rpx;
}

.btn-submit {
  margin: 20rpx;
}
